;http://stackoverflow.com/questions/20747190/read-from-a-file-into-a-emacs-lisp-list
(defun slurp (f)
  (with-temp-buffer
    (insert-file-contents f)
    (buffer-substring-no-properties
       (point-min)
       (point-max))))
