alias ... 'cd ../../'
alias .... 'cd ../../../'
alias ..... 'cd ../../../../'
alias ...... 'cd ../../../../../'
alias ....... 'cd ../../../../../../'
alias .4 'cd ../../../../'
alias .5 'cd ../../../../..'
